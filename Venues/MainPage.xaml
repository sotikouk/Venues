<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Venues.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            VerticalOptions="Center"
            Margin="15">
            <Image Source="plane.png"
                   HeightRequest="100"
                   WidthRequest="100"/>
            <Label Text="Visitor's Diary" 
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"
                   Margin="40"
                   FontSize="35"
                   FontAttributes="Bold"
                   TextColor="{StaticResource Blue}"/>
            <Label Text="The application that allows you to write your experiences about locations and places you have visited."
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"
                   Margin="40"
                   FontSize="20"
                   TextColor="{StaticResource Blue}"/>
            <Button
                x:Name="LoginBtn"
                Text="Enter"
                BackgroundColor="{StaticResource Blue}"
                TextColor="White"
                Clicked="LoginBtn_OnClicked"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
